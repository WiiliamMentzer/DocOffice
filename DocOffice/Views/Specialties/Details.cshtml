@{
	Layout = "_Layout";
}

@model DocOffice.Models.Specialty

<h2>Specialty Details:</h2>
<hr/>
<h3>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)</h3>
<h3>@Html.DisplayNameFor(model => model.Description): @Html.DisplayFor(model => model.Description)</h3>

@if(@Model.JoinEntSpec.Count == 0)
{
  <p>You Currently have no information for this specialty.</p>
}
else
{
  <h4>Doctor' this specialty belongs to:</h4>
  <ul>
  @foreach(var join in Model.JoinEntSpec)
  {
    <li>@join.Doctor.Name</li>
    @* @using (Html.BeginForm("DeleteDoctor", "Patients"))
    {
      @Html.HiddenFor("joinId", @join.DoctorPatientId)
      <input type="submit" value="Delete"/>
    } *@
  }
  </ul>
}

<p>@Html.ActionLink("Edit specialty Info", "Edit", new { id = Model.SpecialtyId })</p>
<p>@Html.ActionLink("Delete this specialties Info", "Delete", new { id = Model.SpecialtyId })</p>
