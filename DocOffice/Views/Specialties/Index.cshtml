@{
	Layout = "_Layout";
}

@using DocOffice.Models;

<h3>All Specialties</h3>

@if (Model.Count == 0)
{
	<p>No specialties yet</p>
}

<ul>
	@foreach (Specialty specialty in Model)
	{
		<li>@Html.ActionLink($"{specialty.Name}", "Details", new { id = specialty.SpecialtyId})</li>
	}
</ul>

<p>@Html.ActionLink("Create a Specialty Profile", "Create")
<p>@Html.ActionLink("Create a Patient Profile", "Create", "Patients")</p>
<p>@Html.ActionLink("Create a Doc Profile", "Create", "Doctors")</p>
<p>@Html.ActionLink("See All Doctors", "Index", "Doctors")</p>
<p>@Html.ActionLink("See All Patients", "Index", "Patients")
<p>@Html.ActionLink("Return Home", "Index", "Home")</p>